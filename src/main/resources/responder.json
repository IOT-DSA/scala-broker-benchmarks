{
	"name":"scala-responder",
	"version":"0.1.0-SNAPSHOT",
	"description":"Scala Responder DSLink",
	"license":"Apache",
	"author":{
		"name":"Vlad Orzhekhovskiy",
		"email":"vlad@uralian.com"
	},
	"main":"bin/broker-benchmark-responder",
	"repository":{
		"type":"git",
		"url":"https://github.com/IOT-DSA/scala-broker-benchmarks"
	},
	"bugs":{
		"url":"https://github.com/IOT-DSA/scala-broker-benchmarks/issues"
	},
	"configs":{
		"name":{
			"type":"string",
			"default":"scala-responder"
		},
		"broker":{
			"type":"url"
		},
		"token":{
			"type":"string"
		},
		"nodes":{
			"type":"path",
			"default":"responder-nodes.json"
		},
		"key":{
			"type":"path",
			"default":".key"
		},
		"log":{
			"type":"enum",
			"default":"info"
		},
		"handler_class":{
			"type":"string",
			"default":"org.dsa.iot.scala.examples.DummyDSLinkHandler"
		}		
	}
}